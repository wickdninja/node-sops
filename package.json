{
  "name": "node-sops",
  "version": "0.1.0",
  "description": "Simple file-based secrets management for Node.js projects",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "node-sops": "bin/node-sops.js"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf lib coverage",
    "prepare": "npm run clean && npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "secrets",
    "encryption",
    "sops",
    "security",
    "configuration",
    "crypto",
    "yaml",
    "json"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "lib/**/*",
    "bin/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "js-yaml": "^4.1.0"
  }
}
